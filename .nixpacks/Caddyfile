:80 {
    root * /app/dist
    
    # Configurar tipos MIME correctos para archivos est치ticos
    @js path *.js *.mjs *.jsx
    header @js Content-Type "application/javascript; charset=utf-8"
    
    @css path *.css
    header @css Content-Type "text/css; charset=utf-8"
    
    @json path *.json
    header @json Content-Type "application/json; charset=utf-8"
    
    @svg path *.svg
    header @svg Content-Type "image/svg+xml"
    
    @png path *.png
    header @png Content-Type "image/png"
    
    @jpg path *.jpg *.jpeg
    header @jpg Content-Type "image/jpeg"
    
    @ico path *.ico
    header @ico Content-Type "image/x-icon"
    
    # Habilitar compresi칩n
    encode gzip
    
    # Servir archivos est치ticos ANTES del fallback
    file_server
    
    # Solo aplicar SPA fallback para rutas que NO sean archivos est치ticos
    @not_assets not path /assets/* /favicon.* /*.js /*.css /*.png /*.jpg /*.jpeg /*.svg /*.ico
    rewrite @not_assets /index.html
}
